platform :ios, '9.0'
source 'https://github.com/CocoaPods/Specs.git'

# Used when using Objective C libraries in a Swift project
use_frameworks!
# ignore all warnings from all pods
inhibit_all_warnings!

target 'ConversaManager' do
    # Ably Realtime Client Library
    pod 'Ably', '1.1.1'
    # A delightful networking framework for iOS, OS X, watchOS, and tvOS
    pod 'AFNetworking', '~> 3.0'
    # For app reviews
    pod 'Appirater', '2.3.1'
    # Branch is the most robust deep linking platform for your mobile app.
    pod 'Branch', '0.25.5'
    # Report a bug; bug reports will be sent directly to your email address!
    pod 'Buglife', '2.8.1'
    #
    # Beautiful charts for iOS/tvOS/OSX!
    pod 'Charts'
    # 
    pod 'Crashlytics', '3.10.7'
    # Great way to make loading spinners in your application look nicer
    pod 'DGActivityIndicatorView', '2.1.1'
    # A persistent background job queue for iOS.
    pod 'EDQueue'
    # The most powerful, yet lightest weight crash reporting solution.
    pod 'Fabric', '1.7.11'
    # Parse Community Framework
    pod 'Parse', '1.17.1'
    # Analytics Pod
    pod 'Flurry-iOS-SDK/FlurrySDK', '9.1.0'
    # Google Maps for iOS
    pod 'GoogleMaps', '2.7.0'
    # ARC support, swipe-to-dismiss, image progress and more
    pod 'IDMPhotoBrowser', '1.10.2'
    # Latest on develop
    pod 'JSQMessagesViewController', :git => 'https://github.com/itolisto/JSQMessagesViewController.git', :branch => 'develop'
    # Light-weight component to play sound effects
    pod 'JSQSystemSoundPlayer', '5.0.0'
    # UITextField subclass with floating labels
    pod 'JVFloatLabeledTextField', '1.2.1'
    # MBProgressHUD is an iOS drop-in class that displays a translucent HUD with an indicator and/or labels
    pod 'MBProgressHUD', '1.1.0'
    # Model framework for Cocoa and Cocoa Touch
    pod 'Mantle', '2.1.0'
    # A clone of UIImagePickerController with multiple selection support.
    pod 'OHQBImagePicker', '1.0.12'
    # OneSignal
    pod 'OneSignal', '2.8.8'
    # Simple pin code text input with underlined space for characters.
    pod 'PinCodeTextField', :git => "https://github.com/tkach/PinCodeTextField"
    #
    pod 'Reachability', '3.2'
    # Simple Objective-C wrapper for the keychain that works on Mac and iOS
    pod 'SAMKeychain', '1.5.3'
    # This library provides an async image downloader with cache support
    pod 'SDWebImage', '~> 4.0'
    # A drop-in replacement for UILabel that supports attributes, data detectors, links, and more
    pod 'TTTAttributedLabel', '2.0.0'
    # Push notifications engagement
    pod 'Taplytics', '2.32.0'
    # Ready to use “Acknowledgements”/“Licenses” view controller for CocoaPods.
    pod 'VTAcknowledgementsViewController', '1.5'
    # Whisper is a component that will make the task of display messages and in-app notifications simple
    pod 'Whisper', :git => 'https://github.com/itolisto/Whisper.git', :branch => 'master'
    # YapDatabase is a "key/value store and MUCH MORE" built atop sqlite for iOS & Mac
    pod 'YapDatabase/SQLCipher', '3.1.1'
end
